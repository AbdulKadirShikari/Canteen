<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/gradient" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_login"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="0dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLoginere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/canteen_id"
                    android:layout_marginTop="25dp"
                    android:drawableRight="@drawable/ic_hand_finger_pointing_down"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Login Here"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/login_mobile_no_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="25dp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableRight="@drawable/login_mobile_icon"
                    android:hint="Mobile  No"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="#99A3A4"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editmobile_id"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableRight="@drawable/ic_lock_open_black_24dp"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="#99A3A4"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/login_login_btn"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@color/btncolor"
                    android:imeOptions="actionDone"
                    android:paddingBottom="2dp"
                    android:text="LOG IN"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/canteen_logo001" />

        <LinearLayout
            android:id="@id/orLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_login"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:background="@drawable/circle"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:text="or"
                android:textColor="#000"
                android:textSize="14dp" />

            <View
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#99A3A4" />
        </LinearLayout>

        <Button
            android:id="@+id/Login_signup_btn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/orLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--Sign Up Code Start================================-->

    <RelativeLayout
        android:id="@+id/signUp_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@drawable/gradient" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="0dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/textViewRegisterHere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/canteen_id"
                    android:layout_marginTop="18dp"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/ic_hand_finger_pointing_down"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:text="Register Here"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_username_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/signup_username_icon"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_phoneno_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:drawableRight="@drawable/signup_mobile_icon"
                    android:hint="Mobile  No"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:drawableRight="@drawable/signup_mail_icon"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editmobile_id"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:drawableRight="@drawable/signup_password_icon"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_confirmpass_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:drawableRight="@drawable/signup_password_icon"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingTop="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/signup_register_btn"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@color/btncolor"
                    android:paddingBottom="2dp"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_above="@id/card_view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/canteen_logo001" />

        <LinearLayout
            android:id="@+id/orLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginLeft="70dp"
                android:background="@drawable/circle"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:text="or"
                android:textColor="#000"
                android:textSize="14dp" />

            <View
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#99A3A4" />
        </LinearLayout>

        <Button
            android:id="@+id/signup_login_btn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_below="@id/orLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Login"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>